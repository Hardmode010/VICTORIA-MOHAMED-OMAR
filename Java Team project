	    DOCTORFEE = 200;
	    FIXEDFEE = 125.99;
	    SUM = ROOMRATE + DOCTORFEE + FIXEDFEE;
	    
	    
	    
	    
	    System.out.println("Enter First Name :"); /// this to show on the screen a space for user to input name
        Name = keyboard.nextLine();  // Read user input
        
	    System.out.println("Enter current address :"); /// this to show on the screen a space for user to input name
	    Address = keyboard.nextLine(); // Read user input
	     
	    System.out.println("please enter phone Number : "); ///this to show on the screen a space for user to input phone number
	    Phone= keyboard.nextLine(); // Read user input
	    
	    System.out.println("please enter your primary Email address :"); ///this to show on the screen a space for user to input Email Address
	    Email = keyboard.nextLine(); // read user input
	    
	    System.out.println("please Enter the number of the doctor you need,\n"+" A: Dentist, B: chiropractic, C: optometrist: ");
	    MedicalProblem = keyboard.nextLine();
	   
	    
	    
	    		
	    
	    
	    
	    System.out.println("This is the information you enterd and the receipt : ");
