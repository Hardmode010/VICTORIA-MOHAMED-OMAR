		Scanner keyboard = new Scanner(System.in);  // Create a Scanner to read input
		String Name, Phone, Address, Email, MedicalProblem;   ///To hold a name. Define Variables
	    double ROOMRATE, DOCTORFEE, FIXEDFEE, SUM;
